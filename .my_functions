git-svn(){
  if [[ ! -z "$1" && ! -z "$2" ]]; then
          echo "Iniciando o clone/c√≥pia ..."
          repo=$(echo $1 | sed 's/\/$\|.git$//')
          svn export "$repo/trunk/$2"
  else
          echo "Use: git-svn <repository> <subdirectory>"
  fi  
}

cpost(){
  if [[ ! -z "$1" && ! -z "$2" ]]; then
      curl -vX POST $1 -H "Content-Type: application/json" -d @$2
  else
      echo "Use: cpost <url> <file.json>"
  fi  
}

function psee(){
    # local caminho=$HOME/.config/nvim

    if [ -f $1 ]; then
        pqiv -ic $1 &
    fi
    if [ -d $1 ]; then
        pqiv $1 &   
    fi 
}

function see(){
    # local caminho=$HOME/.config/nvim

    if [ -f $1 ]; then
        sxiv -b $1 &
    fi
    if [ -d $1 ]; then
        sxiv -t $1 &  
    fi 
}

# alias ncmp="ncmpcpp"
function ncmp(){

    if [ ! $(pidof mpd) ]; then
            mpd && ncmpcpp
            return 0
    fi
    ncmpcpp
}

