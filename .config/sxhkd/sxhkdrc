## Function Keymaps
# XF86AudioPlay
# XF86AudioStop
# XF86AudioNext
# XF86AudioPrev
# XF86AudioRaiseVolume
# XF86AudioLowerVolume
# XF86AudioMute
# XF86MonBrightnessDown
# XF86MonBrightnessUp

#
# wm independent hotkeys
#

# terminal emulator
{super + Return}
    alacritty
    # bspterm
    # kitty
	# konsole

{super + shift + Return}
    kitty

{ctrl + alt + t}
    bspterm --float

# program launcher
super + s
    rofi -show drun -show-icons

{super + r}
    rofi -show run -show-icons -terminal alacritty
# rofi -dmenu -theme-str 'entry{placeholder: " Run";}'

# file explorer
super + shift + e
	alacritty -e ranger
    # kitty -e ranger
	# konsole -e ranger

super + e
	thunar

# Internet Browser
super + b
    google-chrome-stable

super + shift + b
    firefox

# flameshot options
{Print}
    flameshot gui

shift + Print
    ~/.config/rofi/applets/android/screenshot-flameshot.sh

# Volume Control
XF86AudioRaiseVolume
    pulseaudio-ctl up
    # amixer -Mq set Master,0 2%+ unmute && ~/.config/dunst/custom_notification.sh --vol_up
XF86AudioLowerVolume
    pulseaudio-ctl down
    # amixer -Mq set Master,0 2%- unmute && ~/.config/dunst/custom_notification.sh --vol_down
XF86AudioMute
    pulseaudio-ctl mute
    # amixer -q set Master toggle && ~/.config/dunst/custom_notification.sh --mute
    # ~/.config/rofi/scripts/volume.sh mute

# NCMPCPP (Music Player)
super + n
    mpd && alacritty -e ncmpcpp || alacritty -e ncmpcpp
    # mpd && kitty -e ncmpcpp || kitty -e ncmpcpp
    # mpd && konsole -e ncmpcpp || konsole -e ncmpcpp

# Music Player Control

XF86AudioPlay
    mpc -q toggle && ~/.config/dunst/music_notification.sh || playerctl -p spotify play-pause || mocp -G || playerctl play-pause

XF86AudioNext
    mpc -q next && ~/.config/dunst/music_notification.sh || playerctl -p spotify next || mocp -f || playerctl next

XF86AudioPrev
    mpc -q prev && ~/.config/dunst/music_notification.sh || playerctl -p spotify prev || mocp -r || playerctl prev

XF86AudioStop
    mpc -q stop || playerctl -p spotify stop || mocp -s || playerctl stop


# Brightness Control
XF86MonBrightnessUp
    brightnessctl -q set +5% && ~/.config/dunst/brightness_notification.sh --inc
XF86MonBrightnessDown
    brightnessctl -q set 5%- && ~/.config/dunst/brightness_notification.sh --dec
    # brightnessctl -q set 10%- && notify-send -t 1500 "Brightness Up $(brightnessctl get)%" -h int:value:$(brightnessctl get) -u low

# Toggle Redshift temporarily
super + shift + n
    pkill -USR1 redshift

# Betterlockscreen
ctrl + alt + l
    betterlockscreen -l

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
ctrl + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# close app
super + x
	bspc node -c

# set the window state to fullscreen
super + shift + f
	bspc node -t {fullscreen, tiled}

# alternate between the tiled and monocle layout
super + f
	bspc desktop -l next

# Toggle beetwen floating & tiled
super + t
    bspc node -t "~"{floating,tiled}

# Pseudo Tiled & tiled mode
super + shift + t
    bspc node -t {pseudo_tiled}

# super + alt + {t,shift + t,s,f}
	# bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}
#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
#super + {_,shift + }c
    #bspc node -f next.local && bspc node -t fullscreen
alt + Tab
	bspc node -f {next,prev}.local

## focus the next/previous desktop in the current monitor
# super + bracket{left,right}

# Switch workspace
super + {Left,Right}
	bspc desktop -f {prev,next}.local
# or
# ctrl + alt + {Left,Right}
	# bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
# super + {_,shift + }{h,j,k,l}
	# bspc node -p {west,south,north,east}
# ctrl + alt + {Left,Down,Up,Right}
super + ctrl + shift + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# set the window state
# super + alt + {t,shift + t,s,f}
	# bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# expand a window by moving one of its side outward
super + alt + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
# super + ctrl + {h,j,k,l}
super + ctrl + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}

# move a floating window
# super + shift + {h,j,k,l}
	# bspc node -v {-20 0,0 20,0 -20,20 0}
